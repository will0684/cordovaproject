<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.algonquincollege.will0684.project" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WILL0684</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <platform name="android">
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
        <splash density="land-hdpi" src="res/screen/android/800x480.png" />
        <splash density="land-mdpi" src="res/screen/android/480x320.png" />
        <splash density="land-xhdpi" src="res/screen/android/1280x720.png" />
        <splash density="land-xxhdpi" src="res/screen/android/1600x960.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/1920x1280.png" />
        <splash density="port-hdpi" src="res/screen/android/480x800.png" />
        <splash density="port-mdpi" src="res/screen/android/320x480.png" />
        <splash density="port-xhdpi" src="res/screen/android/720x1280.png" />
        <splash density="port-xxhdpi" src="res/screen/android/960x1600.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/1280x1920.png" />
    </platform>
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
